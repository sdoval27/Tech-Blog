<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <button class="btn btn-primary">Leave a comment</button>
  </p>
</div>
<!-- Loop over each object in the projects array -->
{{#each comments as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
    {{comment.user.name}}
    </h2>
    <p>posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.description}}
    </p>
  </div>
</div>
{{/each}}
